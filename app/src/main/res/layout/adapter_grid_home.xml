<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_adapter_grid_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@mipmap/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/cname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_adapter_grid_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/tv_Black"
        android:textSize="@dimen/micro_text_size" />

    <TextView
        android:id="@+id/tv_adpter_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_alignRight="@+id/cname_title"
        android:layout_below="@+id/cname_title"
        android:textColor="@color/red"
        android:textSize="10sp" />
</RelativeLayout>