<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/dimgrey1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_number" />

                <TextView
                    android:id="@+id/tv_order_number"
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="123124214321" />
            </LinearLayout>

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_lsum" />

                <TextView
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="¥"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tv_order_sum"
                    style="@style/order_text_style"
                    android:text="123.00"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_time" />

                <TextView
                    android:id="@+id/tv_order_data"
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="2014-08-08 14:54:32" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        style="@style/order_ll_h"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip">

        <TextView
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="信息:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_phone"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="18511111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_Bname"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="张三"
            android:textSize="14sp" />
    </LinearLayout>


    <shop.xawl.com.shop.Adapter.MyListView
        android:id="@+id/tv_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </shop.xawl.com.shop.Adapter.MyListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            style="@style/order_text_style"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:text="@string/order_state"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_order_stauts"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="未付款" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="5dp"
            android:text="电话联系" />

        <TextView
            android:id="@+id/oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/taobao"
            android:padding="5dp"
            android:text="点击付款" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/dimgrey"
        android:paddingTop="10dp"></LinearLayout>
</LinearLayout>