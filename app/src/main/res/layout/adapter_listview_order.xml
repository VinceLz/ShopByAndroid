<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_number" />

                <TextView
                    android:id="@+id/tv_order_number"
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="123124214321" />
            </LinearLayout>

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_lsum" />

                <TextView
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="¥"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tv_order_sum"
                    style="@style/order_text_style"
                    android:text="123.00"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout style="@style/order_ll_h">

                <TextView
                    style="@style/order_text_style"
                    android:text="@string/order_time" />

                <TextView
                    android:id="@+id/tv_order_data"
                    style="@style/order_text_style"
                    android:layout_marginLeft="4dip"
                    android:text="2014-08-08 14:54:32" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        style="@style/order_ll_h"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip">

        <TextView
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="商家信息:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_phone"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="18511111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_Bname"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="张三"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/filter_spider_line" />

    <LinearLayout
        style="@style/order_ll_h"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip">

        <TextView
            style="@style/order_text_style"
            android:text="@string/order_state"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_order_stauts"
            style="@style/order_text_style"
            android:layout_marginLeft="4dip"
            android:text="未付款" />

    </LinearLayout>

</LinearLayout>